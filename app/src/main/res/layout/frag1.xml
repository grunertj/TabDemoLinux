<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/f1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START OSMAND"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/textViewLongtitudeDestination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latitude Destination"
        android:inputType="numberDecimal"
        android:id="@+id/textViewLatitudeDestination"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Longitude Destination"
        android:inputType="numberDecimal"
        android:id="@+id/textViewLongtitudeDestination"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textViewLatitudeDestination"
        android:layout_alignLeft="@+id/textViewLatitudeDestination"
        android:layout_alignStart="@+id/textViewLatitudeDestination" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAKE COORDINATES"
        android:id="@+id/button_coordinates"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent"
        android:id="@+id/textViewIntent"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

</RelativeLayout>