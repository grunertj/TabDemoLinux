<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:id="@+id/imageViewCompassBackGround"
        android:src="@drawable/compass"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/pointer_green"
        android:id="@+id/imageViewNeedle"
        android:layout_alignTop="@+id/imageViewCompassBackGround"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewFrag31"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewFrag32"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textViewFrag31"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/textViewFrag31"
        android:layout_alignStart="@+id/textViewFrag31" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewFrag33"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textViewFrag32"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/textViewFrag32"
        android:layout_alignStart="@+id/textViewFrag32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewFrag34"
        android:layout_below="@+id/textViewFrag33"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/textViewFrag33"
        android:layout_alignStart="@+id/textViewFrag33" />
</RelativeLayout>